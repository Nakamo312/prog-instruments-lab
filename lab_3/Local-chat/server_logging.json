{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - [%(name)s]: %(levelname)s > %(message)s"
    },
    "extra": {
      "format": "%(asctime)s %(name)s %(filename)s %(lineno)s %(funcName)s %(levelname)s %(message)s"
    }
  },

  "handlers": {
    "console_handler": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },

    "info_file_handler": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "server_info.log",
      "encoding": "utf8"
    },

    "error_file_handler": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "formatter": "extra",
      "filename": "server_errors.log",
      "encoding": "utf8"
    },

    "error_app_file_handler": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "formatter": "extra",
      "filename": "app_errors.log",
      "encoding": "utf8"
    },
    "regex_file_handler": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "msg_regex.log",
      "encoding": "utf8"
    }
  },

  "loggers": {
    "App": {
      "level": "WARNING",
      "handlers": ["console_handler", "error_app_file_handler"],
      "propagate": false
    },
    "App.Server": {
      "level": "DEBUG",
      "handlers": ["console_handler", "info_file_handler", "error_file_handler"],
      "propagate": false
    },
    "App.Client": {
      "level": "INFO",
      "handlers": ["info_file_handler"],
      "propagate": false
    },
    "App.RegexProcessor": {
      "level": "INFO",
      "handlers": ["regex_file_handler"],
      "propagate": false
    }
  },

  "root": {
    "level": "WARNING",
    "handlers": ["console_handler", "error_app_file_handler"]
  }
}